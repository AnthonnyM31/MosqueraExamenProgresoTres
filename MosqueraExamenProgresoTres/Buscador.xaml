<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MosqueraExamenProgresoTres.Buscador"
             xmlns:local="clr-namespace:MosqueraExamenProgresoTres"
             Title="Buscador">


    <StackLayout Padding="20">
        
        <Entry x:Name="entradaPais" Placeholder="Ingresa el nombre del país" />

    
        <Button Text="Buscar"
                Clicked="BuscarPais_Clicked"
                Margin="0,10,0,0"/>

      
        <Button Text="Limpiar"
                Clicked="LimpiarEntrada_Clicked"
                Margin="0,10,0,0"/>

        
        <Button Text="Ver Países Consultados"
        Clicked="VerPaisesConsultados_Clicked"
        Margin="0,20,0,0"/>



        <Label x:Name="resultadoBusqueda"
               TextColor="Black"
               Margin="0,20,0,0" />
        </StackLayout>



</ContentPage>